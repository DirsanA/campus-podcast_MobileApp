<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#010B28"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:background="#010B28">

        <LinearLayout
            android:background="#2C4180"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/campus" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:text="Campus Podcast"
                android:textStyle="bold"
                android:textColor="#E0D9D9"
                android:textSize="25sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:text="Stay connected with engaging episodes featuring student stories, faculty insights, and campus events. Tune in and experience the heartbeat of your university!"
                android:textColor="#E0D9D9"
                android:textSize="20sp"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/sbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CF1616"
                android:background="@drawable/rounded_bg"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Subscribe"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>