<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010B28"
    android:layout_marginBottom="20dp"
    tools:context=".AboutFragment">

    <androidx.cardview.widget.CardView
        android:background="#010B28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:background="#2C4180"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_contact"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/contact"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Contact Us"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textColor="#E0D9D9"
                android:textSize="30sp" />

            <!-- Horizontal line -->
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:text="Phone :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_contact_phone_24"
                    />

                <TextView
                    android:id="@+id/contact_number"
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="0927610843"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:text="Email :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/email"
                    />

                <TextView
                    android:id="@+id/email_address"
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="adaada@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:text="works:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/git"
                    app:tint="@android:color/white"/>

                <TextView
                    android:id="@+id/git_account"
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="github.com/dirsan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:text="developed by:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="Dirsan A Software Eng."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/f"
                    />


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/insta"
                    />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/telegram"
                   />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
